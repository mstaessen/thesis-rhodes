<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @evidence.date %></h1>
    <a href="<%= url_for :action => :show, :id => @evidence.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @evidence.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @evidence.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="evidence[date]" class="fieldLabel">Date</label>
            <input type="text" id="evidence[date]" name="evidence[date]" value="<%= @evidence.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
