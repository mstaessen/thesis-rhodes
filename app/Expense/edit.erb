<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @expense.date %></h1>
    <a href="<%= url_for :action => :show, :id => @expense.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @expense.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @expense.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="expense[date]" class="fieldLabel">Date</label>
            <input type="text" id="expense[date]" name="expense[date]" value="<%= @expense.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
